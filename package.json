{
  "name": "voide",
  "private": true,
  "version": "0.1.0",
  "author": { "name": "Justin Carrow", "email": "mycell6611phone@gmail.com" },
  "build": {
    "appId": "com.example.voide",
    "linux": { "maintainer": "Justin Carrow <mycell6611phone@gmail.com>" }
  },
  "type": "module",
  "main": "packages/main/dist/main.js",
  "description": "VOIDE application",
  "homepage": "https://voide.example.com",
  "scripts": {
    "build": "turbo run build",
    "predev": "pnpm run native:prepare",
    "prestart": "pnpm run native:prepare",
    "native:prepare": "node ./scripts/prepare-better-sqlite3.mjs",
    "dev": "turbo run build && concurrently \"turbo run dev --parallel\" \"wait-on packages/main/dist/main.js packages/preload/dist/preload.js && pnpm exec electron --no-sandbox .\"",
    "lint": "turbo run lint",
    "start": "pnpm exec electron --no-sandbox packages/main/dist/main.js",
    "pack:linux": "pnpm run native:prepare && pnpm exec electron-builder --linux deb AppImage",
    "proto_path proto --plugin=protoc-gen-ts=./node_modules/.pnpm/node_modules/.bin/protoc-gen-ts_proto --ts_out packages/shared/src/gen --ts_opt generate_dependencies,impoproto:gen": "protoc --rtSuffix=.js,outputServices=generic-definitions,esModuleInterop=true proto/flow.proto",
    "license:check": "pnpm -r --filter '!voide' exec license-checker-rseidelsohn --production --onlyAllow 'MIT;Apache-2.0;BSD-2-Clause;BSD-3-Clause;ISC'"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "concurrently": "9.0.1",
    "electron": "30.0.9",
    "electron-builder": "24.13.3",
    "license-checker-rseidelsohn": "4.4.2",
    "turbo": "2.0.4",
    "typescript": "5.5.4",
    "wait-on": "7.2.0"
  },
  "workspaces": ["packages/*", "core"]
}


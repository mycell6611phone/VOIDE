// packages/renderer/tsconfig.json
{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "dist",
    "declaration": false,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "src/**/*",        // your React source files
    "vite.config.ts"   // Vite config
  ],
  "exclude": [
    "node_modules",
    "dist",
    "test",
    "vitest.config.ts"
  ],
  "references": [
    { "path": "../shared" },
    { "path": "../schemas" },
    { "path": "../ipc" }
  ]
}


// tsconfig.base.json (repo root)
{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "incremental": true,
    "types": ["node"]
  },
  "exclude": [
    "node_modules",
    "**/dist",
    "**/test",
    "**/__tests__",
    "**/*.spec.ts",
    "vitest.config.ts"
  ]
}


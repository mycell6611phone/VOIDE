{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://voide.local/spec/graph.schema.json",
  "title": "VOIDE Flow Graph",
  "type": "object",
  "required": ["id", "version", "nodes", "edges"],
  "properties": {
    "$schema": { "type": "string" },
    "id": { "type": "string", "minLength": 1 },
    "version": { "type": "string", "minLength": 1 },
    "name": { "type": "string" },
    "nodes": {
      "type": "array",
      "items": { "$ref": "#/definitions/Node" },
      "default": []
    },
    "edges": {
      "type": "array",
      "items": { "$ref": "#/definitions/Edge" },
      "default": []
    },
    "prompts": { "type": ["object", "null"], "default": {} },
    "models": { "type": ["object", "null"], "default": {} },
    "profiles": { "type": ["object", "null"], "default": {} }
  },
  "additionalProperties": true,
  "definitions": {
    "Port": {
      "type": "object",
      "required": ["port", "types"],
      "properties": {
        "port": { "type": "string", "minLength": 1 },
        "types": {
          "type": "array",
          "items": { "type": "string", "minLength": 1 },
          "default": []
        }
      },
      "additionalProperties": true
    },
    "Node": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "minLength": 1 },
        "name": { "type": "string" },
        "params": {
          "type": "object",
          "additionalProperties": true,
          "default": {}
        },
        "in": {
          "type": "array",
          "items": { "$ref": "#/definitions/Port" },
          "default": []
        },
        "out": {
          "type": "array",
          "items": { "$ref": "#/definitions/Port" },
          "default": []
        }
      },
      "additionalProperties": true
    },
    "Edge": {
      "type": "object",
      "required": ["from", "to"],
      "properties": {
        "id": { "type": "string" },
        "from": {
          "type": "array",
          "items": [
            { "type": "string", "minLength": 1 },
            { "type": "string", "minLength": 1 }
          ],
          "minItems": 2,
          "maxItems": 2
        },
        "to": {
          "type": "array",
          "items": [
            { "type": "string", "minLength": 1 },
            { "type": "string", "minLength": 1 }
          ],
          "minItems": 2,
          "maxItems": 2
        },
        "label": { "type": "string" }
      },
      "additionalProperties": true
    }
  }
}
